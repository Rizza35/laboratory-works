#include <stdio.h>
#define N 4  // Размер квадратного массива

int main(void) {
    int x[N][N]; // квадратный массив N x N
    int sum_above = 0, sum_below = 0;
    int i, j;

    // Ввод массива
    printf("Введите элементы массива %dx%d:\n", N, N);
    for(i = 0; i < N; i++) {
        for(j = 0; j < N; j++) {
            scanf("%d", &x[i][j]);
        }
    }

    // Вычисление сумм элементов над и под главной диагональю
    for(i = 0; i < N; i++) {
        for(j = 0; j < N; j++) {
            if(j > i) {  // Элементы над главной диагональю
                sum_above += x[i][j];
            } else if(j < i) {  // Элементы под главной диагональю
                sum_below += x[i][j];
            }
        }
    }

    // Обнуление элементов в зависимости от условия
    if(sum_above < sum_below) {
        // Обнуляем элементы над главной диагональю
        for(i = 0; i < N; i++) {
            for(j = i + 1; j < N; j++) {
                x[i][j] = 0;
            }
        }
    } else {
        // Обнуляем элементы под главной диагональю
        for(i = 1; i < N; i++) {
            for(j = 0; j < i; j++) {
                x[i][j] = 0;
            }
        }
    }

    // Вывод массива
    printf("Результат:\n");
    for(i = 0; i < N; i++) {
        for(j = 0; j < N; j++) {
            printf("%4d ", x[i][j]);
        }
        printf("\n");
    }

    return 0;
}
